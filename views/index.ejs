<!DOCTYPE html>
<html lang="en"></html>

<%- include('./partials/header.ejs') %>

<body>
<%- include('./partials/nav.ejs') %>


<% if(blog.length > 0) {%>

    <% blog.forEach(post => {%>
        <div class="blogheader">
            <a href="/blogs/<%= post._id %>">
                <h2><%= post.title %></h2>
                <p><%= post.snippet %></p>
                <!-- <i class="fa-solid fa-thumbs-up"></i> -->
                <span><%= post.createdAt %></span>
            </a>
        </div>
        

    <% }) %>

<% } %>




<%- include('./partials/footer.ejs') %>
</body>
</html>